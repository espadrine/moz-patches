+// Relevant character codes.
+// May be used as states.
+const ETHER   = 0;  // âˆ…
+const QUOTE   = 39; // '
+const DQUOTE  = 34; // "
+const BSLASH  = 92; // \
+const SLASH   = 47; // /
+const STAR    = 42; // *
+const LF      = 10; // \n
+const BRACK   = 91; // [
+const CBRACK  = 93; // ]
