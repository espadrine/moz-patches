+    if (this._cycling) {
+      this._index += count;
+      if (this._index >= this._completion.candidates.length) {
+        // Go back to the start.
+        this._index = 0;
+      } else if (this._index < 0) {
+        // Go back to the end.
+        this._index = this._completion.candidates.length - 1;
+      }
